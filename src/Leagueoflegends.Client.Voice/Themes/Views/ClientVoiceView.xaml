<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:views="clr-namespace:Leagueoflegends.Client.Voice.UI.Views"
					xmlns:units="clr-namespace:Leagueoflegends.Client.Voice.UI.Units">
	
	<Style TargetType="{x:Type views:ClientVoiceView}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type views:ClientVoiceView}">
					<Grid Margin="20 10 0 0">
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
						</Grid.RowDefinitions>
						<units:InputSetting/>
						<units:InputMode/>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>