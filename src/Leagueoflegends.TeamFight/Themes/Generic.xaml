	<Style TargetType="{x:Type views:TeamFightView}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type views:TeamFightView}">
					<Grid UseLayoutRounding="True" SnapsToDevicePixels="True">
						<Grid.Background>
							<ImageBrush ImageSource="/Leagueoflegends.Resources;component/Images/lol-teamfight-background.jpg" 
										RenderOptions.BitmapScalingMode="Fant"
										Stretch="UniformToFill"/>
						</Grid.Background>
						<Grid.RowDefinitions>
							<RowDefinition Height="*"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
						</Grid.RowDefinitions>
						<Rectangle Style="{StaticResource RTG.TOP}"/>
						<Rectangle Style="{StaticResource RTG.LEFT}"/>
						<Rectangle Style="{StaticResource RTG.RIGHT}"/>

						<Grid Grid.Row="0">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto"/>
								<ColumnDefinition Width="*"/>
							</Grid.ColumnDefinitions>

							<Control Style="{StaticResource CTL.TITLE}"/>
							<Control Style="{StaticResource CTL.MENU}"/>
							<Control Style="{StaticResource CTL.INFO}"/>
						</Grid>

						<ListBox Style="{StaticResource LBX.ITEM}"/>
						<Control Style="{StaticResource CTL.THUMB}"/>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
