	<Style TargetType="{x:Type Button}" x:Key="BTN.THUMB">
		<Setter Property="UseLayoutRounding" Value="True"/>
		<Setter Property="Margin" Value="10 0 10 0"/>
		<Setter Property="Tag" Value=""/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type Button}">
					<Grid Height="135">
						<Border BorderBrush="#28282B" Background="#0B131B" BorderThickness="2" Padding="1">
							<Border Background="#11171f" BorderThickness="1">
								<Grid>
									<Image x:Name="img" RenderOptions.BitmapScalingMode="Fant" Stretch="UniformToFill" Opacity="0.9"/>
									<Rectangle VerticalAlignment="Bottom" Height="70" Fill="{StaticResource BG.BOTTOM}"/>
									<TextBlock Grid.Row="1" Text="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Content}"
											   Foreground="#A09B8C" FontSize="13" FontWeight="Normal" TextWrapping="WrapWithOverflow"
											   HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 0 0 5"/>
								</Grid>
							</Border>
						</Border>
					</Grid>
					<ControlTemplate.Triggers>
						<Trigger Property="Tag" Value="01">
							<Setter TargetName="img" Property="Source" Value="/Leagueoflegends.Resources;component/Images/lol-teamfight-thumb01.jpg"/>
						</Trigger>
						<Trigger Property="Tag" Value="02">
							<Setter TargetName="img" Property="Source" Value="/Leagueoflegends.Resources;component/Images/lol-teamfight-thumb02.jpg"/>
						</Trigger>
						<Trigger Property="Tag" Value="03">
							<Setter TargetName="img" Property="Source" Value="/Leagueoflegends.Resources;component/Images/lol-teamfight-thumb03.jpg"/>
						</Trigger>
						<Trigger Property="Tag" Value="04">
							<Setter TargetName="img" Property="Source" Value="/Leagueoflegends.Resources;component/Images/lol-teamfight-thumb04.jpg"/>
						</Trigger>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter Property="Cursor" Value="Hand"/>
							<Setter TargetName="img" Property="Opacity" Value="1"/>
							<Setter Property="BorderBrush" Value="#C8AA6E"/>
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

