<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:units="clr-namespace:Lol.Profile.UI.Units">
    <Style TargetType="{x:Type TextBlock}" x:Key="TXB.PLAY">
        <Setter Property="Margin" Value="0 12 0 0"/>
        <Setter Property="Text" Value="플레이한 게임 중 비율"/>
        <Setter Property="Foreground" Value="#A09B8C"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    <Style TargetType="{x:Type units:RecentChampion}">
        <Setter Property="Margin" Value="16 0 0 0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:RecentChampion}">
                    <StackPanel>
                        <units:PlayChampListBox/>
                        <TextBlock Style="{StaticResource TXB.PLAY}"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>