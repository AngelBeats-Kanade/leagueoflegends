<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:units="clr-namespace:Lol.Clash.UI.Units">
    <LinearGradientBrush x:Key="BDR.BUTTON" StartPoint="0, 0" EndPoint="1, 1">
        <GradientStop Color="#BE9F63" Offset="0"/>
        <GradientStop Color="#83662B" Offset="0.5"/>
        <GradientStop Color="#664C26" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BDR.BUTTON.OVER" StartPoint="0, 0" EndPoint="1, 1">
        <GradientStop Color="#E7DCC6" Offset="0"/>
        <GradientStop Color="#BDAE85" Offset="0.5"/>
        <GradientStop Color="#C1953B" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BG.BUTTON.OVER" StartPoint="0, 0" EndPoint="1, 1">
        <GradientStop Color="#212529" Offset="0"/>
        <GradientStop Color="#2C2F2E" Offset="0.5"/>
        <GradientStop Color="#383833" Offset="1"/>
    </LinearGradientBrush>

    <Style TargetType="{x:Type units:PositionButton}">
        <Setter Property="Background" Value="#1E2328"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:PositionButton}">
                    <Border x:Name="border1" Height="48" Width="48" Background="{TemplateBinding Background}" BorderThickness="2.5" BorderBrush="{StaticResource BDR.BUTTON}">
                        <Border.RenderTransform>
                            <RotateTransform Angle="45"/>
                        </Border.RenderTransform>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border1" Property="BorderBrush" Value="{StaticResource BDR.BUTTON.OVER}"/>
                            <Setter TargetName="border1" Property="Background" Value="{StaticResource BG.BUTTON.OVER}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>