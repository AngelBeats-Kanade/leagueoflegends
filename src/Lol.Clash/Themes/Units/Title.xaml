<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:units="clr-namespace:Lol.Clash.UI.Units">

    <SolidColorBrush Color="#F0E6D2" x:Key="TXT.FGD"/>

    <Style TargetType="{x:Type TextBlock}" x:Key="TXB.TEMP">
        <Setter Property="Text" Value="격전 챔피언"/>
        <Setter Property="Foreground" Value="{StaticResource TXT.FGD}"/>
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0 6 0 0"/>
    </Style>
    
    <Style TargetType="{x:Type units:Title}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:Title}">
                    <StackPanel>
                        <units:CupToggleButton/>
                        <TextBlock Style="{StaticResource TXB.TEMP}"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>