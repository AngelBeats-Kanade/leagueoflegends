<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:Lol.Clash.UI.Views"
                    xmlns:units="clr-namespace:Lol.Clash.UI.Units">
	
    <Style TargetType="{x:Type views:ClashView}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:ClashView}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <units:Manual/>
                        <Grid Grid.Row="1" Margin="110 0 30 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <units:CityCup/>
                            <units:Schedule Grid.Column="2"/>
                            <Grid Grid.Column="1" Width="70"/>
                        </Grid>
                        <Grid Grid.Row="2" Height="100">
                            <units:FaqButton Margin="32 0 0 32"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>