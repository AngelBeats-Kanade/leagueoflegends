<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:units="clr-namespace:Lol.Collection.UI.Units"
                    xmlns:ctrls="clr-namespace:Lol.LayoutSupport.Controls;assembly=Lol.LayoutSupport">

    <Style TargetType="{x:Type Border}" x:Key="BDR.ITEM.01">
        <Setter Property="Height" Value="240"/>
        <Setter Property="Width" Value="180"/>
        <Setter Property="BorderThickness" Value="0 1 1 1"/>
        <Setter Property="Margin" Value="20 0 7 0"/>
    </Style>

    <Style TargetType="{x:Type units:RuneDetailListBoxItem}">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:RuneDetailListBoxItem}">
                    <StackPanel Orientation="Horizontal">
                        <Border Style="{StaticResource BDR.ITEM.01}">
                            <Image Source="{Binding Name}"/>
                        </Border>

                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>