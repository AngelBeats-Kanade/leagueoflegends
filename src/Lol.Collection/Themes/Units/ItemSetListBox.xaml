<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:units="clr-namespace:Lol.Collection.UI.Units"
                    xmlns:ctrls="clr-namespace:Lol.LayoutSupport.Controls;assembly=Lol.LayoutSupport">

    <Style TargetType="{x:Type Border}" x:Key="BDR.TEMP">
        <Setter Property="BorderThickness" Value="0.5"/>
        <Setter Property="BorderBrush" Value="#463714"/>
        <Setter Property="Width" Value="1000"/>
        <Setter Property="Margin" Value="40 0 0 0"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
    
    <Style TargetType="{x:Type units:ItemSetListBox}">
        <Setter Property="ItemsSource" Value="{Binding ItemList}"/>
        <Setter Property="Margin" Value="40 20 0 0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:ItemSetListBox}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Border Padding="8 6 0 6">
                            <Grid Background="#000A13" Opacity="0.7">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ctrls:CheckBox01 x:Name="ch" 
                                                  Grid.Column="0" 
                                                  IsChecked="False" 
                                                  VerticalAlignment="Center" 
                                                  Foreground="#F0E6D2" 
                                                  FontWeight="Bold" 
                                                  Content="이름" 
                                                  FontSize="15" />
                                <TextBlock Grid.Column="1"
                                           Foreground="#F0E6D2" 
                                           FontWeight="Bold" 
                                           Text="챔피언"
                                           FontSize="15" 
                                           VerticalAlignment="Center"
                                           Margin="10 0 0 0"/>
                                <TextBlock Grid.Column="2" 
                                           Foreground="#F0E6D2" 
                                           FontWeight="Bold"
                                           Text="맵"
                                           FontSize="15"
                                           VerticalAlignment="Center" 
                                           Margin="65 0 0 0"/>
                            </Grid>
                        </Border>
                        <ctrls:BasicScroll Grid.Row="1">
                            <ItemsPresenter/>
                        </ctrls:BasicScroll>
                        <StackPanel Grid.Row="2">
                            <Border Style="{StaticResource BDR.TEMP}"/>
                        </StackPanel>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ch" Property="ToolTip">
                                <Setter.Value>
                                    <ctrls:BasicTooltip ToolTip="모든 세트를 내보내기 하려면 체크하세요" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>