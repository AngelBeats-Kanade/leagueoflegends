    <Style TargetType="{x:Type views:ChampionsView}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:ChampionsView}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2.5*"/>
                            <ColumnDefinition Width="7.5*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Margin="20 100 30 0 ">
                            <ctrls:RiotTextBox x:Name="txtSearch" MinWidth="190"
                                               Height="30"
                                               HorizontalAlignment="Center"
                                               PlaceHolder="검색"/>
                            <ctrls:CheckBox01 x:Name="ch" 
                                              IsChecked="False" 
                                              VerticalAlignment="Center"
                                              Foreground="#9E998A" 
                                              FontWeight="Bold" 
                                              Content="미보유 상품보기" 
                                              FontSize="12"
                                              Margin="12 15 0 0"/>
                            <!--<units:SortComboBox Style="{StaticResource CBX.SORT}"/>-->
                        </StackPanel>
                        
                        <TextBlock Grid.Column="1" Background="red"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
