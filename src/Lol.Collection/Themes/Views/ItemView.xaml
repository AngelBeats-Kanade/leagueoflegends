<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:Lol.Collection.UI.Views"
                    xmlns:ctrls="clr-namespace:Lol.LayoutSupport.Controls;assembly=Lol.LayoutSupport">
    
    <Style TargetType="{x:Type views:ItemView}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:ItemView}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="6*"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <StackPanel>
                            <ctrls:RiotTextBox MinWidth="300"
                                           Height="30"
                                           HorizontalAlignment="Right"
                                           PlaceHolder="아이템 세트 검색"
                                           Margin="0 14 66 0"/>
                            <TextBlock HorizontalAlignment="Center" Foreground="Green" FontSize="20" Text="test" VerticalAlignment="Center"/>
                            <TextBlock HorizontalAlignment="Center" Foreground="Green" FontSize="20" Text="test2" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1" HorizontalAlignment="Center" Foreground="Green" FontSize="20" Text="텍스트" VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
    