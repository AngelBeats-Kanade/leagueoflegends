<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:units="clr-namespace:Lol.GameRoom.UI.Units"
                    xmlns:cnvts="clr-namespace:Lol.Converter;assembly=Lol.Converter">

    <LinearGradientBrush x:Key="BDR.RDO" StartPoint="0, 0" EndPoint="1, 1">
        <GradientStop Color="#A27D30" Offset="0"/>
        <GradientStop Color="#A88130" Offset="0.5"/>
        <GradientStop Color="#A07C31" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BDR.RDO.OVER" StartPoint="0, 0" EndPoint="1, 1">
        <GradientStop Color="#EDE1C9" Offset="0"/>
        <GradientStop Color="#E6D3AD" Offset="0.5"/>
        <GradientStop Color="#C99D41" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BG.MAP" StartPoint="0, 0" EndPoint="1, 1">
        <GradientStop Color="#25CFDC" Offset="0"/>
        <GradientStop Color="#02A9B7" Offset="0.5"/>
        <GradientStop Color="#046E88" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BG.MAP.OVER" StartPoint="0, 1" EndPoint="1, 0">
        <GradientStop Color="#059DB5" Offset="0"/>
        <GradientStop Color="#015078" Offset="0.5"/>
        <GradientStop Color="#0B1C38" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="BDR.MAP" StartPoint="0.5, 0" EndPoint="0.5, 1">
        <GradientStop Color="#CABB8E" Offset="0"/>
        <GradientStop Color="#9F8859" Offset="0.5"/>
        <GradientStop Color="#795B2A" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="BDR.MAP.OVER" StartPoint="0.5, 0" EndPoint="0.5, 1">
        <GradientStop Color="#EFE4CD" Offset="0"/>
        <GradientStop Color="#D8B977" Offset="0.5"/>
        <GradientStop Color="#C89C3D" Offset="1"/>
    </LinearGradientBrush>

    <Style TargetType="{x:Type Border}" x:Key="BDR.SECTION">
        <Setter Property="BorderThickness" Value="0 1 0 0"/>
        <Setter Property="BorderBrush" Value="#606F6E"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
    </Style>

    <Style TargetType="{x:Type RadioButton}" x:Key="RDO.TYPE">
        <Setter Property="BorderBrush" Value="{StaticResource BDR.RDO}"/>
        <Setter Property="Margin" Value="0 16 0 0"/>
        <Setter Property="GroupName" Value="radio"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">
                    <StackPanel Orientation="Horizontal">
                        <Border Height="13" 
                                Width="13" 
                                RenderTransformOrigin="0.5, 0.5" 
                                BorderThickness="2" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                VerticalAlignment="Center">
                            <Border.RenderTransform>
                                <RotateTransform Angle="45"/>
                            </Border.RenderTransform>
                            <Border Margin="2 2 2 2" 
                                    Background="#F0E6D2" 
                                    Visibility="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=IsChecked, Converter={cnvts:BooleanToVisibilityConverter}}"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center" Margin="10 0 0 0">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="#CBBC90" VerticalAlignment="Center" FontSize="14"/>
                            <TextBlock x:Name="text" Text="{Binding Content}" Foreground="#A09B8C" VerticalAlignment="Center" FontSize="11" Visibility="Visible"/>
                        </StackPanel>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource BDR.RDO.OVER}"/>
                        </Trigger>
                        <DataTrigger Binding="{Binding Content}" Value="{x:Null}">
                            <Setter TargetName="text" Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type ListBoxItem}" x:Key="LBXI.MAPTYPE">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                    <RadioButton Style="{StaticResource RDO.TYPE}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type ListBox}" x:Key="LBX.MAPTYPE">
        <Setter Property="Margin" Value="0 0 0 0"/>
        <Setter Property="ItemsSource" Value="{Binding GameTypes}"/>
        <Setter Property="ItemContainerStyle" Value="{StaticResource LBXI.MAPTYPE}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListBox}">
                    <ItemsPresenter/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type Control}" x:Key="CTL.SHAPE">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{StaticResource BDR.MAP}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Control}">
                    <Grid>
                        <Border Height="82" 
                                Width="82" 
                                Visibility="{Binding Seq, Converter={cnvts:EqualsToVisibilityConverter}, ConverterParameter=0}"
                                Background="#0A1428" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="4 4 4 4"
                                Margin="0 0 0 30">
                            <Border BorderThickness="2 2 2 2"
                                    Margin="4 4 4 4"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"/>
                        </Border>
                        <Grid Visibility="{Binding Seq, Converter={cnvts:EqualsToVisibilityConverter}, ConverterParameter=1}">
                            <Path Width="82" 
                                  Height="82"
                                  Margin="0 0 0 30"
                                  Stretch="Uniform" 
                                  Fill="#0A1428"
                                  Stroke="{TemplateBinding BorderBrush}"
                                  StrokeThickness="4"
                                  Data="M8.660254,0 L17.320508,5 17.320508,15 8.660254,20 0,15 0,5 8.660254,0 Z" />
                            <Path Width="60" 
                                  Height="60"
                                  Margin="0 0 0 30"
                                  Stretch="Uniform" 
                                  Fill="{TemplateBinding Background}"
                                  Stroke="{TemplateBinding BorderBrush}"
                                  StrokeThickness="2"
                                  Data="M8.660254,0 L17.320508,5 17.320508,15 8.660254,20 0,15 0,5 8.660254,0 Z" />
                        </Grid>
                        <Grid Visibility="{Binding Seq, Converter={cnvts:EqualsToVisibilityConverter}, ConverterParameter=2}">
                            <Path Height="82"
                                  Width="82" 
                                  Margin="0 0 0 30"
                                  Stretch="Fill"
                                  Fill="#0A1428"
                                  Stroke="{TemplateBinding BorderBrush}"
                                  StrokeThickness="4"
                                  Data="M15,0 L60,0 75,30 0,30 z" >
                            </Path>
                            <Path Width="60" 
                                  Height="60"
                                  Margin="0 0 0 30"
                                  Stretch="Fill"
                                  Fill="{TemplateBinding Background}"
                                  Stroke="{TemplateBinding BorderBrush}"
                                  StrokeThickness="2"
                                  Data="M15,0 L60,0 75,30 0,30 z">
                            </Path>
                        </Grid>
                        <Border Height="82" 
                                Width="82"
                                Background="#0A1428" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="4 4 4 4"
                                CornerRadius="100"
                                Margin="0 0 0 30"
                                Visibility="{Binding Seq, Converter={cnvts:EqualsToVisibilityConverter}, ConverterParameter=3}">
                            <Border CornerRadius="100"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="2 2 2 2"
                                    Margin="4 4 4 4"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsMouseOver}" Value="True">
                            <Setter Property="Background" Value="{StaticResource BG.MAP.OVER}"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BDR.MAP.OVER}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True">
                            <Setter Property="Background" Value="{StaticResource BG.MAP.OVER}"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type Control}" x:Key="CTL.TITLE">
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Foreground" Value="#CDBE8E"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="Friz Quadrata Std"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Control}">
                    <Grid>
                        <StackPanel Margin="0 0 0 20">
                            <Control Style="{StaticResource CTL.SHAPE}"/>
                            <TextBlock FontSize="15" Text="{Binding WarType}" HorizontalAlignment="Center"/>
                            <TextBlock FontSize="24" Text="{Binding MapName}" HorizontalAlignment="Center" Margin="0 8 0 0"/>
                        </StackPanel>
                        <Border Height="20" 
                                Width="150"
                                Background="#ACFFFFFF"
                                CornerRadius="10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Visibility="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected, Converter={cnvts:BooleanToVisibilityConverter}}"
                                Margin="0 0 0 10">
                            <Border.Effect>
                                <BlurEffect Radius="100" KernelType="Gaussian"/>
                            </Border.Effect>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True">
                            <Setter Property="Foreground" Value="#F0E6D2"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!--[TODO] Kevin: 코드수정 필요, 상단영역만 MouseOver필요-->
    <!--[TODO] Elena: 상단영역 MouseOver 수정함-->
    <Style TargetType="{x:Type ListBoxItem}" x:Key="LBXI.MAP">
        <Setter Property="Margin" Value="0 90 0 0"/>
        <Setter Property="Foreground" Value="#A09B8C"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Control Style="{StaticResource CTL.TITLE}"/>
                        <Border Style="{StaticResource BDR.SECTION}"/>
                        <StackPanel Grid.Row="2" Margin="10 0 10 0">
                            <TextBlock x:Name="txb"
                                       Grid.Row="1" 
                                       TextWrapping="Wrap" 
                                       Text="{Binding Content}" 
                                       FontSize="13" 
                                       Margin="0 12 0 0" 
                                       Padding="0 0 0 0" 
                                       Visibility="Collapsed"/>
                            <StackPanel x:Name="stack" 
                                        Grid.Row="2" 
                                        Visibility="Collapsed">
                                <Border BorderThickness="0 1 0 0" 
                                        BorderBrush="#576260" 
                                        Margin="0 15 0 3"/>
                                <ListBox Style="{StaticResource LBX.MAPTYPE}"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="#F0E6D2"/>
                            <Setter TargetName="txb" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="stack" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="txb" Property="Visibility" Value="Visible"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type units:MapList}">
        <Setter Property="ItemContainerStyle" Value="{StaticResource LBXI.MAP}"/>
        <Setter Property="ItemsSource" Value="{Binding PVPs}"/>
        <Setter Property="SelectedItem" Value="{Binding CurrentPVP}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:MapList}">
                    <ItemsPresenter/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="4"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>