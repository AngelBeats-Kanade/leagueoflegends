<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:Lol.GameRoom.UI.Views"
                    xmlns:units="clr-namespace:Lol.GameRoom.UI.Units"
                    xmlns:ctrls="clr-namespace:Lol.LayoutSupport.Controls;assembly=Lol.LayoutSupport">
    <Style TargetType="{x:Type ctrls:RiotTextBox}" x:Key="RIOT.TXB">
        <Setter Property="Width" Value="320"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
    
    <Style TargetType="{x:Type views:SummonersRiftView}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:SummonersRiftView}">
                    <Grid Margin="40 0 20 20">
                        <units:RoomTitle/>
                        <units:TopRightContent/>
                        <ctrls:RiotTextBox Style="{StaticResource RIOT.TXB}" IconVisibility="Collapsed"/>
                        <ctrls:RiotGameButtonn VerticalAlignment="Bottom" HorizontalAlignment="Center" Content="대전 찾기"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>