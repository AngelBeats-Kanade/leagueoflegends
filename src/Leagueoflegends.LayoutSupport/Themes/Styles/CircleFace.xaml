<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:ctrls="clr-namespace:Leagueoflegends.LayoutSupport.Controls">
	
	<Style TargetType="{x:Type ctrls:CircleFace}">
		<Setter Property="BorderBrush" Value="Transparent"/>
		<Setter Property="Width" Value="30"/>
		<Setter Property="Height" Value="30"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ctrls:CircleFace}">
					<Border Background="{TemplateBinding Background}">
						<Grid>
							<Ellipse Stroke="{TemplateBinding BorderBrush}" 
								 StrokeThickness="2">
								<Ellipse.Fill>
									<ImageBrush ImageSource="{Binding RelativeSource={RelativeSource AncestorType=ctrls:CircleFace}, Path=Source}" 
												Stretch="UniformToFill"/>
								</Ellipse.Fill>
							</Ellipse>
						</Grid>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>