<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:units="clr-namespace:Leagueoflegends.Settings.UI.Units"
					xmlns:ctrls="clr-namespace:Leagueoflegends.LayoutSupport.Controls;assembly=Leagueoflegends.LayoutSupport">
	
	<Style TargetType="{x:Type units:CurrentContent}">
		<Setter Property="Grid.Row" Value="1"/>
		<Setter Property="Grid.Column" Value="1"/>
		<Setter Property="Margin" Value="0 0 0 30"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type units:CurrentContent}">
					<ctrls:BasicScroll CanContentScroll="True" 
									   VerticalScrollBarVisibility="Auto" 
									   HorizontalScrollBarVisibility="Auto">
						<Grid VerticalAlignment="Top">
							<ContentControl Content="{Binding CurrentView}"/>
						</Grid>
					</ctrls:BasicScroll>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>