<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:units="clr-namespace:Leagueoflegends.Settings.UI.Units">
	
	<Style TargetType="{x:Type units:CurrentMenu}">
		<Setter Property="Grid.ColumnSpan" Value="2"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type units:CurrentMenu}">
					<StackPanel Orientation="Horizontal">
                        <TextBlock Foreground="#A09B8C" FontSize="17" FontWeight="Bold" VerticalAlignment="Center" FontFamily="Friz Quadrata Std"
								   HorizontalAlignment="Left" Margin="8 0 0 7" Text="{Binding CurrentSettingMenu.Category, StringFormat={}{0:}  /}"/>
                        <TextBlock Foreground="#F0E6D2" FontSize="17" FontWeight="Bold" VerticalAlignment="Center" FontFamily="Friz Quadrata Std"
								   HorizontalAlignment="Left" Margin="5 0 0 7" Text="{Binding CurrentSettingMenu.Name, StringFormat=' {0}'}"/>
					</StackPanel>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>