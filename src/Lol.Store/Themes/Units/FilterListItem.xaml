<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:units="clr-namespace:Lol.Store.UI.Units">

	<Style TargetType="{x:Type units:FilterListItem}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type units:FilterListItem}">
					<Border>
						<units:StoreCheckBox Content="{Binding DisplayName}"
											 IsChecked="{Binding IsChecked}"
											 Margin="0 0 0 10"/>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	
</ResourceDictionary>