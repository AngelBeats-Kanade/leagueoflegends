<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:units="clr-namespace:Lol.Store.UI.Units">
	
	<Style TargetType="{x:Type units:SortComboBox}" x:Key="CBX.SORT">
		<Setter Property="ItemsSource" Value="{Binding Sorting}"/>
		<Setter Property="SelectedValue" Value="{Binding CurrentSorting}"/>
	</Style>

	<Style TargetType="{x:Type units:ItemMenu}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type units:ItemMenu}">
					<StackPanel Margin="30 55 5 0">
						<units:Category/>
						<units:SearchTextBox/>
						<units:StoreCheckBox Content="Show Owned" Margin="0 2 0 0"/>
						<units:SortComboBox Style="{StaticResource CBX.SORT}"/>
						<units:FilterList/>
					</StackPanel>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	
</ResourceDictionary>