<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:units="clr-namespace:Lol.Store.UI.Units">
	
	<Style TargetType="{x:Type units:SortComboBox}" x:Key="CBX.SORT">
		<Setter Property="ItemsSource" Value="{Binding Sorting}"/>
		<Setter Property="SelectedValue" Value="{Binding CurrentSorting}"/>
	</Style>

    <Style TargetType="{x:Type units:SkinLeftMenu}">
		<Setter Property="Template">
			<Setter.Value>
                <ControlTemplate TargetType="{x:Type units:SkinLeftMenu}">
					<StackPanel Margin="30 55 5 0">
                        <units:Category ItemsSource="{Binding SkinMenus}" SelectedItem="{Binding CurrentSkinMenu}"/>
						<units:SearchTextBox />
						<units:StoreCheckBox Content="보유 중인 상품도 보기" Margin="0 2 0 0"/>
						<units:SortComboBox Style="{StaticResource CBX.SORT}"/>
						<units:FilterList/>
					</StackPanel>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	
</ResourceDictionary>