<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:units="clr-namespace:Lol.Store.UI.Units"
					xmlns:ctrls="clr-namespace:Lol.LayoutSupport.Controls;assembly=Lol.LayoutSupport"
                    xmlns:commons="clr-namespace:Lol.Store.UI.Commons">

    <Style TargetType="{x:Type commons:Category}">
		<Setter Property="Template">
			<Setter.Value>
                <ControlTemplate TargetType="{x:Type commons:Category}">
					<ctrls:BasicScroll>
						<ItemsPresenter/>
					</ctrls:BasicScroll>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	
</ResourceDictionary>