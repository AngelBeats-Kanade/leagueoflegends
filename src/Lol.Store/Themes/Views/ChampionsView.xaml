<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:views="clr-namespace:Lol.Store.UI.Views"
					xmlns:units="clr-namespace:Lol.Store.UI.Units">

	<Style TargetType="{x:Type views:ChampionsView}">
		<Setter Property="Template">
			<Setter.Value>
                <ControlTemplate TargetType="{x:Type views:ChampionsView}">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="200"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>
						<units:ItemMenu/>
                        <units:ChampList Grid.Column="1"/>
                    </Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>