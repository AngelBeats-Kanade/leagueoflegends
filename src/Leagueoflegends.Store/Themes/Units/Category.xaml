<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:units="clr-namespace:Leagueoflegends.Store.UI.Units"
					xmlns:ctrls="clr-namespace:Leagueoflegends.LayoutSupport.Controls;assembly=Leagueoflegends.LayoutSupport">

	<Style TargetType="{x:Type units:Category}">
		<Setter Property="ItemsSource" Value="{Binding ChampMenus}"/>
		<Setter Property="SelectedItem" Value="{Binding CurrentChampMenu}"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type units:Category}">
					<ctrls:BasicScroll>
						<ItemsPresenter/>
					</ctrls:BasicScroll>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	
</ResourceDictionary>