	<Style TargetType="{x:Type Control}" x:Key="CTL.HEADER">
		<Setter Property="Margin" Value="0 20 0 0"/>
		<Setter Property="VerticalAlignment" Value="Top"/>
		<Setter Property="HorizontalAlignment" Value="Center"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type Control}">
					<StackPanel HorizontalAlignment="Center">
						<TextBlock Text="나만의 상점" FontSize="16" FontWeight="Bold" Foreground="#F0E6D2" HorizontalAlignment="Center" Margin="0 0 0 -10"/>
						<Viewbox Width="970" Height="30">
							<Path Data="{StaticResource GEO.HEADER}" Stroke="{StaticResource BDR.HEADER}"/>
						</Viewbox>
					</StackPanel>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="{x:Type Button}" x:Key="BTN.ITEM">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type Button}">
					<Border>
						<Viewbox Width="120" Height="250">
							<Grid>
								<Path x:Name="path1" Data="{StaticResource GEO.FRAME.OUT}" Stroke="{StaticResource PATH.BDR}" StrokeThickness="2">
									<Path.Effect>
										<DropShadowEffect BlurRadius="5" Opacity="1" ShadowDepth="2" Color="#000000"/>
									</Path.Effect>
									<Path.Fill>
										<ImageBrush ImageSource="/Leagueoflegends.Resources;component/Images/card-kaisa.png" Stretch="UniformToFill"/>
									</Path.Fill>
								</Path>
								<Path x:Name="path2" Data="{StaticResource GEO.FRAME.BOTTOM}" Fill="{StaticResource PATH2.BG}" Stroke="{StaticResource PATH2.BDR}"
									  StrokeThickness="1" Margin="2 0 0 1" VerticalAlignment="Bottom"/>
								<Path x:Name="path3" Data="{StaticResource GEO.FRAME.LEFT}" Fill="#070706" Stroke="{StaticResource PATH3.BDR}" StrokeThickness="1"
									  Margin="1 0 0 2" HorizontalAlignment="Left" VerticalAlignment="Center"/>
								<Path x:Name="path4" Data="{StaticResource GEO.FRAME.RIGHT}" Fill="#070706" Stroke="{StaticResource PATH4.BDR}" StrokeThickness="1"
									  Margin="0 0 1 2" HorizontalAlignment="Right" VerticalAlignment="Center"/>
							</Grid>
						</Viewbox>
					</Border>
					<ControlTemplate.Triggers>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter TargetName="path1" Property="Stroke" Value="{StaticResource PATH.BDR.OVER}"/>
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="{x:Type Control}" x:Key="CTL.BOTTOM">
		<Setter Property="HorizontalAlignment" Value="Center"/>
		<Setter Property="Margin" Value="0 0 0 30"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type Control}">
					<StackPanel>
						<TextBlock Text="종료 일시: 1월 19일 02:00 GMT+9" Foreground="#C8AA6E" FontSize="16" HorizontalAlignment="Center"/>
						<TextBlock Text="챔피언 미보유 시 챔피언 포함 가격으로 표시됩니다" Foreground="#C89B3C" FontSize="11" HorizontalAlignment="Center"/>
						<Border BorderBrush="#C89B3C" BorderThickness="0 1 0 0" Margin="0 5 0 5" HorizontalAlignment="Center" Width="980"/>
						<TextBlock Text="특별 할인 챔피언 및 스킨을 확인해 보세요. 할인은 여기서만 적용되니 이번 기회를 놓치지 마세요!"
								   Foreground="#C89B3C" FontSize="11" HorizontalAlignment="Center"/>
					</StackPanel>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	
	<Style TargetType="{x:Type views:MyShopView}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type views:MyShopView}">
					<Grid Background="#06111D">
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="*"/>
							<RowDefinition Height="Auto"/>
						</Grid.RowDefinitions>
						<Control Grid.Row="0" Style="{StaticResource CTL.HEADER}"/>
						<Button Grid.Row="1" Style="{StaticResource BTN.ITEM}"/>
						<Control Grid.Row="2" Style="{StaticResource CTL.BOTTOM}"/>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	
</ResourceDictionary>
