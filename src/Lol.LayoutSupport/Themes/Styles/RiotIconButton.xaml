<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrls="clr-namespace:Lol.LayoutSupport.Controls">
    <LinearGradientBrush x:Key="BTN.BDR" StartPoint="0.5, 0" EndPoint="0.5, 1">
        <GradientStop Color="#B89959" Offset="0"/>
        <GradientStop Color="#997B44" Offset="0.5"/>
        <GradientStop Color="#70552A" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="BTN.BDR.OVER" StartPoint="0.5, 0" EndPoint="0.5, 1">
        <GradientStop Color="#EFC574" Offset="0"/>
        <GradientStop Color="#BA9652" Offset="0.5"/>
        <GradientStop Color="#8C6A34" Offset="1"/>
    </LinearGradientBrush>

    <Style TargetType="{x:Type ctrls:RiotIconButton}">
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ctrls:RiotIconButton}">
                    <Border x:Name="border1" Width="34" Height="34" CornerRadius="20" Background="#1E2328"  Grid.Column="5"
								BorderBrush="{StaticResource BTN.BDR}" BorderThickness="2.5" Margin="0 0 0 0">
                        <Border x:Name="border2" Background="Transparent" BorderBrush="#14171A" BorderThickness="1" CornerRadius="20">
                            <ctrls:RiotIcon x:Name="icon" Fill="#CDBE91" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" IconType="{TemplateBinding IconType}"/>
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border1" Property="BorderBrush" Value="{StaticResource BTN.BDR.OVER}"/>
                            <Setter TargetName="icon" Property="Fill" Value="#FFEDB5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>