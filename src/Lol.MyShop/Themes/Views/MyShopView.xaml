<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:units="clr-namespace:Lol.MyShop.UI.Units"
					xmlns:views="clr-namespace:Lol.MyShop.UI.Views">

	<Style TargetType="{x:Type views:MyShopView}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type views:MyShopView}">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="*"/>
							<RowDefinition Height="Auto"/>
						</Grid.RowDefinitions>
						<units:Title/>
                        <StackPanel Orientation="Horizontal" Grid.Row="1">
                            <units:ShopItem/>
                            <units:ShopItem/>
                            <units:ShopItem/>
                            <units:ShopItem/>
                            <units:ShopItem/>
                            <units:ShopItem/>
                        </StackPanel>
						<units:EventInfo/>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>