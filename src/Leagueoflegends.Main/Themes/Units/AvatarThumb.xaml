<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:units="clr-namespace:Leagueoflegends.Main.UI.Units">


	<ImageBrush x:Key="AVATAR" ImageSource="{Binding Avatar}" Stretch="UniformToFill"/>
	
	<Style TargetType="{x:Type units:AvataThumb}">
		<Setter Property="Background" Value="{StaticResource AVATAR}"/>
		<Setter Property="BorderBrush" Value="Transparent"/>
		<Setter Property="Width" Value="30"/>
		<Setter Property="Height" Value="30"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type units:AvataThumb}">
					<Border BorderBrush="{TemplateBinding BorderBrush}" 
							Background="{TemplateBinding Background}"
							BorderThickness="2"
							CornerRadius="20" />
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>