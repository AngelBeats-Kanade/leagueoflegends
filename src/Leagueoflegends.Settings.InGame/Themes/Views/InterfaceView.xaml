<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:views="clr-namespace:Leagueoflegends.Settings.InGame.UI.Views"
					xmlns:units="clr-namespace:Leagueoflegends.Settings.InGame.UI.Units">
	<Style TargetType="{x:Type views:InterfaceView}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type views:InterfaceView}">
					<Grid Margin="20 10 0 5">
						<StackPanel>
							<units:InterfaceSize/>
							<units:Strength/>
							<units:Notification/>
							<units:InterfaceOption/>
							<units:Emotion/>
							<units:Eternals/>
							<units:Messages/>
						</StackPanel>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>