<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:units="clr-namespace:Leagueoflegends.Settings.InGame.UI.Units"
					xmlns:ctrls="clr-namespace:Leagueoflegends.LayoutSupport.Controls;assembly=Leagueoflegends.LayoutSupport">
	
	<Style TargetType="{x:Type units:SpellHotKey}">
		<Setter Property="Grid.Row" Value="1"/>
		<Setter Property="HorizontalAlignment" Value="Right"/>
		<Setter Property="Margin" Value="0 20 40 0"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type units:SpellHotKey}">
					<StackPanel Orientation="Horizontal">
						<ctrls:RiotHotKey Content="{Binding Model.SpellKey1}"/>
						<ctrls:RiotHotKey Content="{Binding Model.SpellKey2}"/>
					</StackPanel>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>