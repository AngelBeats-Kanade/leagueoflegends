<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:units="clr-namespace:Leagueoflegends.Home.General.UI.Units">

	<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" x:Key="BTN.BDR">
		<GradientStop Color="#C8AA6E" Offset="0"/>
		<GradientStop Color="#795c28" Offset="1"/>
	</LinearGradientBrush>

	<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" x:Key="BTN.BDR.OVER">
		<GradientStop Color="#f0e6d7" Offset="0"/>
		<GradientStop Color="#c99d3d" Offset="1"/>
	</LinearGradientBrush>

	<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" x:Key="BTN.BG.OVER">
		<GradientStop Color="#1e232a" Offset="0"/>
		<GradientStop Color="#443e2e" Offset="1"/>
	</LinearGradientBrush>

	<Style TargetType="{x:Type TextBlock}" x:Key="TXB.SUB">
		<Setter Property="Foreground" Value="#A09B8C"/>
		<Setter Property="FontSize" Value="12.5"/>
		<Setter Property="Text" Value="공식 컨셉 영상"/>
		<Setter Property="FontWeight" Value="Bold"/>
		<Setter Property="Margin" Value="0 0 0 -6"/>
	</Style>

	<Style TargetType="{x:Type TextBlock}" x:Key="TXB.HEADER">
		<Setter Property="Foreground" Value="#F0E6D2"/>
		<Setter Property="FontSize" Value="32"/>
		<Setter Property="Text" Value="I`LL SHOW YOU"/>
		<Setter Property="FontWeight" Value="Bold"/>
	</Style>

	<Style TargetType="{x:Type TextBlock}" x:Key="TXB.DESC">
		<Setter Property="Foreground" Value="#A09B8C"/>
		<Setter Property="FontSize" Value="14"/>
		<Setter Property="TextWrapping" Value="WrapWithOverflow"/>
		<Setter Property="Text" Value="`I`LL SHOW YOU`의 새로운 컨셉 영상에서 아리가 과거의 자신을 회상합니다."/>
		<Setter Property="Margin" Value="0 12 0 12"/>
	</Style>

	<Style TargetType="{x:Type Button}" x:Key="BTN.01">
		<Setter Property="Height" Value="32"/>
		<Setter Property="FontFamily" Value="Friz Quadrata Std"/>
		<Setter Property="FontWeight" Value="Bold"/>
		<Setter Property="FontSize" Value="14"/>
		<Setter Property="Foreground" Value="#CDBE91"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type Button}">
					<Grid>
						<Border x:Name="border" BorderBrush="{StaticResource BTN.BDR}" BorderThickness="2 2 2 2" 
                                Background="#1E2328" SnapsToDevicePixels="True" ClipToBounds="True">
							<Grid Margin="0 0 0 0">
								<ContentPresenter VerticalAlignment="Center" Margin="18 0 18 0"/>
								<Border Background="Transparent" BorderBrush="#CC091119" BorderThickness="1" Margin="0 0 0 0"/>
							</Grid>
						</Border>
					</Grid>
					<ControlTemplate.Triggers>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter Property="Cursor" Value="Hand"/>
							<Setter Property="Foreground" Value="#f0e6d2"/>
							<Setter TargetName="border" Property="BorderBrush" Value="{StaticResource BTN.BDR.OVER}"/>
							<Setter TargetName="border" Property="Background" Value="{StaticResource BTN.BG.OVER}"/>
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="{x:Type Button}" x:Key="BTN.MOVIE" BasedOn="{StaticResource BTN.01}">
		<Setter Property="HorizontalAlignment" Value="Left"/>
		<Setter Property="Margin" Value="0 6 0 0"/>
		<Setter Property="Content" Value="영상 보기"/>
	</Style>

	<Style TargetType="{x:Type units:OfficialVideo}">
		<Setter Property="Grid.Row" Value="0"/>
		<Setter Property="Grid.Column" Value="0"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="Margin" Value="30 0 0 0"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type units:OfficialVideo}">
					<StackPanel>
						<TextBlock Style="{StaticResource TXB.SUB}"/>
						<TextBlock Style="{StaticResource TXB.HEADER}"/>
						<TextBlock Style="{StaticResource TXB.DESC}"/>
						<Button Style="{StaticResource BTN.MOVIE}"/>
					</StackPanel>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>