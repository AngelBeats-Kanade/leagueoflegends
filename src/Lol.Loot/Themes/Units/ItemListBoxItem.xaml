<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:units="clr-namespace:Lol.Loot.UI.Units"
                    xmlns:ctrls="clr-namespace:Lol.LayoutSupport.Controls;assembly=Lol.LayoutSupport">
    <Style TargetType="{x:Type TextBlock}" x:Key="TXB.VALUE">
        <Setter Property="Grid.Row" Value="1"/>
        <Setter Property="Margin" Value="0 6 0 0"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="#a09b8c"/>
    </Style>
    
    <Style TargetType="{x:Type units:ItemListBoxItem}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:ItemListBoxItem}">
                    <Grid HorizontalAlignment="Center" x:Name="gd" Margin="0 0 36 0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <ctrls:RiotIcon x:Name="path" Fill="#a09b8c" Height="24" Width="24" IconType="{Binding Type}"/>
                        <TextBlock Text="{Binding Value}" Style="{StaticResource TXB.VALUE}"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding Seq}" Value="0">
                            <Setter TargetName="path" Property="Fill" Value="#f29130"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Seq}" Value="1">
                            <Setter TargetName="path" Property="Fill" Value="#9926d4"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Seq}" Value="3">
                            <Setter TargetName="gd" Property="Margin" Value="0"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>