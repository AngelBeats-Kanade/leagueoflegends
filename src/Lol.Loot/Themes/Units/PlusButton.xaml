<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:units="clr-namespace:Lol.Loot.UI.Units"
                    xmlns:ctrls="clr-namespace:Lol.LayoutSupport.Controls;assembly=Lol.LayoutSupport">
    
    <LinearGradientBrush x:Key="BDR.BTN" StartPoint="0.5, 0" EndPoint="0.5, 1">
        <GradientStop Color="#B8944A" Offset="0"/>
        <GradientStop Color="#967330" Offset="0.5"/>
        <GradientStop Color="#6A5128" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="BDR.BTN.OVER" StartPoint="0.5, 0" EndPoint="0.5, 1">
        <GradientStop Color="#EFE5D0" Offset="0"/>
        <GradientStop Color="#DBBE83" Offset="0.5"/>
        <GradientStop Color="#C89B3C" Offset="1"/>
    </LinearGradientBrush>

    <Style TargetType="{x:Type ctrls:RiotIcon}" x:Key="RIOT.ICON">
        <Setter Property="Height" Value="20"/>
        <Setter Property="Width" Value="20"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Fill" Value="#CDBE91"/>
    </Style>
    
    <Style TargetType="{x:Type ctrls:RiotIcon}" x:Key="RIOT.ICON.ALPHAQ" BasedOn="{StaticResource RIOT.ICON}">
        <Setter Property="Height" Value="26"/>
        <Setter Property="Width" Value="26"/>
        <Setter Property="IconType" Value="AlphaQ"/>
        <Setter Property="Margin" Value="0 0 0 3"/>
    </Style>
    
    <Style TargetType="{x:Type units:PlusButton}">
        <Setter Property="BorderBrush" Value="{StaticResource BDR.BTN}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Margin" Value="0 0 40 0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:PlusButton}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" Height="37" Width="71" BorderThickness="2" Background="Transparent">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <ctrls:RiotIcon x:Name="path1" IconType="Plus" Style="{StaticResource RIOT.ICON}"/>
                            <ctrls:RiotIcon x:Name="path2" Style="{StaticResource RIOT.ICON.ALPHAQ}"/>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource BDR.BTN.OVER}"/>
                            <Setter TargetName="path1" Property="Fill" Value="#F0E6D2"/>
                            <Setter TargetName="path2" Property="Fill" Value="#F0E6D2"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>