<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:units="clr-namespace:Lol.Loot.UI.Units">
    <LinearGradientBrush x:Key="BDR.ITEM" StartPoint="0.5, 0" EndPoint="0.5, 1">
        <GradientStop Color="#B4995F" Offset="0"/>
        <GradientStop Color="#916C29" Offset="0.5"/>
        <GradientStop Color="#6C5128" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="BDR.ITEM.OVER" StartPoint="0.5, 0" EndPoint="0.5, 1">
        <GradientStop Color="#E4C88F" Offset="0"/>
        <GradientStop Color="#B7985B" Offset="0.5"/>
        <GradientStop Color="#8A6A2A" Offset="1"/>
    </LinearGradientBrush>

    <Style TargetType="{x:Type units:CommonListItem}">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderBrush" Value="{StaticResource BDR.ITEM}"/>
        <Setter Property="Background" Value="#010F1D"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:CommonListItem}">
                    <Border BorderThickness="2.5"
                            Margin="0 14 0 0"
                            Height="70"
                            Width="70"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            Background="{TemplateBinding Background}"
                            HorizontalAlignment="Stretch">
                        <Grid>
                            <Image Source="{Binding Content}" Height="60" x:Name="img"/>
                            <Border Background="Transparent" x:Name="transbd"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource BDR.ITEM.OVER}"/>
                            <Setter TargetName="transbd" Property="Background" Value="#55010F1D"/>
                        </Trigger>
                        <DataTrigger Binding="{Binding Seq}" Value="0">
                            <Setter TargetName="img" Property="Height" Value="45"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Seq}" Value="1">
                            <Setter TargetName="img" Property="Height" Value="80"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Seq}" Value="2">
                            <Setter TargetName="img" Property="Height" Value="55"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>