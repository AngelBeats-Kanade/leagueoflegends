<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:Lol.Loot.UI.Views"
                    xmlns:units="clr-namespace:Lol.Loot.UI.Units"
                    xmlns:ctrls="clr-namespace:Lol.LayoutSupport.Controls;assembly=Lol.LayoutSupport">
    <Style TargetType="{x:Type Border}" x:Key="BD.LINE">
        <Setter Property="Background" Value="#785A28"/>
        <Setter Property="Width" Value="18"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="18 8 0 18"/>
    </Style>

    <Style TargetType="{x:Type ctrls:RiotIconButton}" x:Key="RIOT.ICON">
        <Setter Property="Height" Value="22"/>
        <Setter Property="Width" Value="22"/>
        <Setter Property="IconType" Value="Help"/>
        <Setter Property="IconHeight" Value="11"/>
        <Setter Property="IconWidth" Value="11"/>
        <Setter Property="Margin" Value="18 0 0 0"/>
    </Style>
    
    <Style TargetType="{x:Type views:LootView}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:LootView}">
                    <Grid Margin="0 18 0 18">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="340"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <units:LootLeftMenu/>
                            <Border Style="{StaticResource BD.LINE}"/>
                            <ctrls:RiotIconButton Style="{StaticResource RIOT.ICON}"/>
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>