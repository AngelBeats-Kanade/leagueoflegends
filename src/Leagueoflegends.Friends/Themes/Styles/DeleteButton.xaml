<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:views="clr-namespace:Leagueoflegends.Friends.Views"
					xmlns:ctrls="clr-namespace:Leagueoflegends.LayoutSupport.Controls;assembly=Leagueoflegends.LayoutSupport">

	<Style TargetType="{x:Type views:DeleteButton}">
		<Setter Property="Command" Value="{Binding RelativeSource={RelativeSource AncestorType=views:AddFriendsView}, Path=DataContext.DeleteCommand}"/>
		<Setter Property="CommandParameter" Value="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Content}"/>
		<Setter Property="HorizontalAlignment" Value="Left"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="Grid.Column" Value="2"/>
		<Setter Property="Visibility" Value="Hidden"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type views:DeleteButton}">
					<Border Background="Transparent">
						<ctrls:RiotIcon IconType="Close" 
										HorizontalAlignment="Left"
										Fill="#CDBE91"
										Width="17" 
										Height="17"
										Stroke="#CDBE91" 
										StrokeThickness="1" 
										Margin="0 0 15 0"/>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>